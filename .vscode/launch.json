{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "run app",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--dart-define-from-file=.env",
            ]
        },
        {
            "name": "run web app",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--dart-define-from-file=.env",
                "-d",
                "chrome",
                "--web-port=3000"
            ]
        }
    ]
}